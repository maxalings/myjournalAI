<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>#</th>
        <th>Date</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @journalpages.each_with_index do |page, index| %>
        <tr class="hover">
          <th><%= index + 1 %></th>
          <td><%= page.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= page.answer %></td>
          <td>
            <%= link_to "Delete", journalpage_path(page),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn  btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
