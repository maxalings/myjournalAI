<%= form_for @journal, html: { class: "space-y-4 w-full max-w-md mx-auto bg-white p-6 rounded-lg shadow-md" } do |f| %>
  <div class="form-group">
    <label for="journal_name" class="block text-sm font-medium text-gray-700 mb-2">Journal Name</label>
    <%= f.text_field :name, id: "journal_name", placeholder: "Enter the journal name", class: "input input-bordered w-full" %>
  </div>

  <div class="form-group">
    <label for="journal_topic" class="block text-sm font-medium text-gray-700 mb-2">Journal Topic</label>
    <%= f.text_field :topic, id: "journal_topic", placeholder: "Enter the journal topic", class: "input input-bordered w-full" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Create Journal", class: "btn btn-primary w-full" %>
  </div>
<% end %>
